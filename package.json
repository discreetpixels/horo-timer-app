{
  "name": "ruby10",
  "productName": "Ruby10",
  "version": "1.1.0",
  "description": "A beautiful, modern menu bar timer for macOS",
  "main": "main.js",
  "homepage": ".",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:dmg": "electron-builder --mac",
    "dist": "electron-builder --publish=never"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.ruby10.timer",
    "productName": "Ruby10",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/**/*",
      "!*.md"
    ],
    "mac": {
      "icon": "assets/icon3.png",
      "category": "public.app-category.productivity",
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      "extendInfo": {
        "LSUIElement": true
      }
    },
    "dmg": {
      "title": "Ruby10 Timer",
      "icon": "assets/icon3.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 200
        },
        {
          "x": 400,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}

